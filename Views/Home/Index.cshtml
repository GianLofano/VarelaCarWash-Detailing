@{
    ViewData["Title"] = "Home Page";
    var user = ViewBag.LoggedUser as VarelaCarWash.Models.User;
}

<!-- Íconos de Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<!-- Estilos para fondo oscuro -->
<style>
    body {
        background-color: #1e1e1e;
        color: #f8f9fa;
        font-family: 'Segoe UI', sans-serif;
    }

    h1, p {
        color: #f8f9fa;
    }

    .dropdown-menu {
        background-color: #343a40;
    }

    .dropdown-item {
        color: white;
    }

        .dropdown-item:hover {
            background-color: #ff5722;
        }
</style>

<div class="container mt-5 text-center">
    <h1>Bienvenido a Varela - Car Wash & Detailing</h1>
    <p>Reservá tu turno o comprá productos para el cuidado de tu vehículo.</p>

    @if (user != null)
    {
        <div class="text-center">
            <a class="nav-link text-light" asp-controller="Productos" asp-action="Index">
                <i class="bi bi-box-seam"></i> Productos
            </a>
        </div>
    }
</div>
@model VarelaCarWash.Controllers.HomeViewModel

<h2 class="mt-4">Productos Disponibles</h2>
<div class="row">
    @foreach (var p in Model.Productos)
    {
        <div class="col-md-4 mb-3">
            <div class="card bg-dark text-light h-100">
                <div class="card-body">
                    <h5 class="card-title">@p.Nombre</h5>
                    <p class="card-text"><strong>Categoría:</strong> @p.Categoria</p>
                    <p class="card-text"><strong>Precio:</strong> $@p.Precio</p>
                    <p class="card-text"><strong>Stock:</strong> @p.Stock unidades</p>
                </div>
            </div>
        </div>
    }
</div>


<h2 class="mt-5">Servicios</h2>
<div class="row">
    @foreach (var s in Model.Servicios)
    {
        <div class="col-md-4 mb-3">
            <div class="card bg-secondary text-white">
                <div class="card-body">
                    <h5 class="card-title">@s.Nombre</h5>
                    <p>@s.Descripcion</p>
                    <p><strong>$@s.Precio</strong></p>
                </div>
            </div>
        </div>
    }
</div>