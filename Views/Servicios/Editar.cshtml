@model VarelaCarWash.Models.Service?

<h2>Editar Servicio</h2>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model?.Id" />
    <div class="form-group">
        <label>Nombre</label>
        <input name="Nombre" class="form-control" value="@Model?.Nombre" />
    </div>
    <div class="form-group">
        <label>Descripci√≥n</label>
        <textarea name="Descripcion" class="form-control">@Model?.Descripcion</textarea>
    </div>
    <div class="form-group">
        <label>Precio</label>
        <input name="Precio" class="form-control" type="number" step="0.01" value="@Model?.Precio" />
    </div>
    <div class="form-group">
        <label>Imagen</label>
        <input type="file" name="Imagen" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model?.ImagenPath))
        {
            <div class="mt-2">
                <img src="@Url.Content(Model.ImagenPath)" alt="Imagen actual" style="max-width:150px;max-height:150px;" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
    <a href="/Servicios" class="btn btn-secondary mt-2 ms-2">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
