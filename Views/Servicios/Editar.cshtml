@model VarelaCarWash.Models.Service

<h2>Editar Servicio</h2>
<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label>Nombre</label>
        <input name="Nombre" class="form-control" value="@Model.Nombre" />
    </div>
    <div class="form-group">
        <label>Descripci√≥n</label>
        <textarea name="Descripcion" class="form-control">@Model.Descripcion</textarea>
    </div>
    <div class="form-group">
        <label>Precio</label>
        <input name="Precio" class="form-control" type="number" step="0.01" value="@Model.Precio" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
