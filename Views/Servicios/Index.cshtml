@model List<VarelaCarWash.Models.Service>

<h2>Servicios</h2>
<a href="/Servicios/Nuevo" class="btn btn-success mb-2">Nuevo Servicio</a>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th><th>Nombre</th><th>Descripci√≥n</th><th>Precio</th><th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Nombre</td>
                <td>@s.Descripcion</td>
                <td>@s.Precio</td>
                <td>
                    <a href="/Servicios/Editar/@s.Id" class="btn btn-warning btn-sm">Editar</a>
                    <form asp-action="Eliminar" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@s.Id" />
                        <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
